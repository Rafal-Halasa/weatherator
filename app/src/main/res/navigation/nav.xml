<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.weatherator.ui.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:launchSingleTop="false" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.weatherator.ui.detail.DetailFragment"
        android:label="DetailFragment" >
        <argument
            android:name="cityId"
            app:argType="string" />
        <argument
            android:name="LocalizedName"
            app:argType="string" />
    </fragment>
</navigation>